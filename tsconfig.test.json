{
  "compilerOptions": {
    /* 屏蔽索引报错 */
    "suppressImplicitAnyIndexErrors": false,
    /* 为发出的JavaScript设置JavaScript语言版本，并包括兼容的库声明 */
    "target": "ES2020",
    "module": "CommonJS",
    //    "declaration": true,
    //    "sourceMap": true,
    "outDir": "./test",
    //    "declarationDir": "./test",
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "incremental": true
  },
  "files": [
    "test/index.ts"
  ],
  "exclude": [
    "ndoe_modules"
  ]
}